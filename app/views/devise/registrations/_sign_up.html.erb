

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: " Enter First Name (Required)", required: true %>
    </div>

    <div class="form-group">
      <%= f.text_field :middle_name, class: 'form-control', placeholder: " Enter Middle Name (Optional)" %>
    </div>

    <div class="form-group">
      <%= f.text_field :last_name, class: 'form-control', placeholder: " Enter Last Name (Required)", required: true %>
    </div>

    <div class="form-group">
      <%= f.text_field :username, class: 'form-control', placeholder: " Enter Username (Required)", required: true %>
    </div>

    <div class="form-group">
      <%=   f.country_select "country",{ include_blank: 'Select a country' }, {class: "form-control", id: "country"} %>
    </div>

    <div class="form-group">
      <%= f.text_field :location, class: 'form-control',id: 'gmaps-input-address', placeholder: " Enter Location (Required)" %>
      <div id='gmaps-error'></div>
      <div id='gmaps-canvas'></div>

      <button onclick="getLocation()", class="btn btn-sm btn-primary">Get Your Current Location</button>

      <p id="demo"></p>
    </div>

    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', placeholder: "Enter Email (Required)", required: true %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: " Enter Password", required: true %>
      <div class="pull-right"><% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: " Re-Enter Password", required: true %>
    </div>
    <br>

    <div class="actions">
      <%= f.submit "Sign up", class: 'form-control btn btn-primary' %>
    </div>
<% end %>
<br>


