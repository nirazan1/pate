
<div class="row">
  <div class="col-md-6">
    <div>
      <%= link_to :back do  %>
          <i class="fa fa-long-arrow-left fa-2x"></i>
      <% end %>
    </div>
    <br>

    <div class="alert alert-info" role="alert">
      <h2>
        <%= @user.full_name.upcase %> <%= link_to "", edit_user_registration_path, :title => "Edit Profile", :class => "fa fa-pencil-square-o" %>
      </h2>

      <div>
        <div class="fa fa-user"> <%= "Member Since "+(@user.created_at.to_formatted_s(:long_ordinal))%></div>
      </div>

      <div>
        <div class="fa fa-map-marker"> <%= @user.location %></div>
      </div>

      <br><br>
      <div>
        <h4>
          <%= simple_format(@user.info) %>
        </h4>
      </div>

    </div>

  </div>

  <% if current_user.present? %>
      <div class="col-md-6">
        Message
        <div id="messages"></div>
        <input id="chat-input" class="form-control" type="text" placeholder="say anything" autofocus/>
      </div>
  <% end %>
</div>